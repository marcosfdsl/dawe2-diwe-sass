---
import bars from "./bars.svg";
---

<div class="header">
    <button class="boton-mostrar-menu">
        <img src={bars.src} alt="" />
    </button>
    <div class="menu">
        <a class="-mt-28 md:-mt-52 lg:-mt-0" href="/">
            PRINCIPAL
            <span class="subrayado"></span>
        </a>
        <a href="/biografia">BIOGRAFÍA <span class="subrayado"></span></a>
        <a href="/">CONTACTO <span class="subrayado"></span></a>
    </div>
</div>

<style lang="scss">

    $medida1: 1.2rem;

    @mixin centrado {
        display: flex;
        align-items: center;
        justify-content: center;
}

    /* MOBILE FIRST */

    body {
        margin: 0;
        padding: 0;
    }

    /* Botones */
    .boton-mostrar-menu {
        @include centrado;
        aspect-ratio: 1 / 1;
        padding: 0.9rem;
    }

    /* Header y menú */
    .header {
        overflow: hidden;
        background-color: white;
        height: 8vh;
        width: 100%;
        display: flex;
    }

    .menu {
        height: 92vh;
        width: 100vw;
        display: none;
        flex-direction: column;
        justify-content: center;
        position: absolute;
        z-index: 3;
        top: 8%;
        background-color: rgba(255, 255, 255, 0.801);

        a {
            padding-top: $medida1;
            padding-bottom: $medida1;
            font-size: 1rem;
            @include centrado;
            color: rgb(0, 0, 0);
        }
    }

    /* TABLET */

    @media (min-width: 768px) {
        .boton-menu {
            font-size: 1.5rem;
        }
    }

    /* LAPTOP */

    @media (min-width: 1024px) {
        /* Botones */
        .boton-mostrar-menu {
            display: none;
        }

        /* Menú */
        .menu {
            top: 0%;
            height: 100%;
            width: 100vw;
            @include centrado;
            flex-direction: row;
            position: relative;
            background-color: transparent;

            a {
                margin-bottom: 0;
                padding-top: 0;
                padding-bottom: 0;
                padding-left: 1.3%;
                padding-right: 1.3%;
                height: 100%;
                @include centrado;
                background-color: white;
                font-size: 1rem;
            }

            // Subrayado

            .subrayado {
                position: absolute;
                bottom: $medida1;
                background-color: rgba(0, 0, 0, 0.418);
                opacity: 0%;
                height: 2px;
                width: 6rem;
                transition:
                    opacity 0.4s ease-in-out,
                    bottom 0.4s ease-in-out;
            }

            a:hover .subrayado {
                opacity: 100%;
                bottom: 1rem;
            }
        }
    }
</style>

<script>
    // MOSTRAR / OCULTAR MENU (MOVIL Y TABLET)
    const boton = document.querySelectorAll(".boton-mostrar-menu");

    boton.forEach((button) => {
        button.addEventListener("click", () => {
            const menu = document.querySelector(".menu") as HTMLElement;
            menu.style.display =
                menu.style.display === "none" || menu.style.display === ""
                    ? "flex"
                    : "none";
        });
    });
</script>
