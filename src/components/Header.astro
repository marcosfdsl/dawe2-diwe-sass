---
import flor from "./flor.webp";
import bars from "./bars.svg";
---

<div class="header">
    <button class="boton-mostrar-menu">
        <img src={bars.src} alt="" />
    </button>
    <div class="menu">
        <a class="boton-menu -mt-28 md:-mt-52 lg:-mt-0" href="/">
            PRINCIPAL
            <span class="subrayado"></span>
        </a>
        <a class="boton-menu" href="/">BIOGRAFÍA <span class="subrayado"></span></a>
        <a class="boton-menu" href="/"
            >CONTACTO <span class="subrayado"></span></a
        >
    </div>
</div>

<style lang="scss">
    /* MOBILE FIRST */

    body {
        margin: 0;
        padding: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    /* Header y menú */
    .header {
        overflow: hidden;
        background-color: white;
        height: 8vh;
        width: 100%;
        display: flex;
    }

    .espacio-invisible {
        display: flex;
        width: 80%;
    }

    .menu {
        height: 92vh;
        width: 100vw;
        display: none;
        flex-direction: column;
        justify-content: center;
        position: absolute;
        z-index: 3;
        top: 8%;
        background-color: rgba(255, 255, 255, 0.801);
    }

    /* Botones */
    .boton-mostrar-menu {
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.3s;
        aspect-ratio: 1 / 1;
        padding: 0.9rem;
    }

    .boton-menu {
        padding-top: 1.2rem;
        padding-bottom: 1.2rem;
        font-size: 1rem;
        display: flex;
        justify-content: center;
        color: rgb(0, 0, 0);
        transition: color 0.3s;
    }

    /* TABLET */

    @media (min-width: 768px) {
        .boton-menu {
            font-size: 1.5rem;
        }
    }

    /* LAPTOP */

    @media (min-width: 1024px) {
        .espacio-invisible {
            display: none;
        }

        /* Menú */
        .menu {
            top: 0%;
            height: 100%;
            width: 100vw;
            display: flex;
            flex-direction: row;
            justify-content: center;
            position: relative;
            background-color: transparent;
        }

        /* Botones */
        .boton-flor {
            transition: background-color 0.3s;
        }

        .boton-flor:hover {
            background-color: #d6d6d6;
        }

        .boton-mostrar-menu {
            display: none;
        }

        .boton-menu {
            margin-bottom: 0;
            padding-top: 0;
            padding-bottom: 0;
            padding-left: 1.3%;
            padding-right: 1.3%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: rgb(255, 255, 255);
            font-size: 16px;
        }

        .subrayado {
            position: absolute;
            bottom: 1.4rem;
            background-color: rgba(0, 0, 0, 0.418);
            opacity: 0%;
            height: 2px;
            width: 6rem;
            transition:
                opacity 0.4s ease-in-out,
                bottom 0.4s ease-in-out; /* Agregamos una transición */
        }

        .boton-menu:hover .subrayado {
            opacity: 100%;
            bottom: 1.2rem;
        }
    }
</style>

<script>
    // MOSTRAR / OCULTAR MENU (MOVIL Y TABLET)
    const boton = document.querySelectorAll(".boton-mostrar-menu");

    boton.forEach((button) => {
        button.addEventListener("click", () => {
            const menu = document.querySelector(".menu") as HTMLElement;
            menu.style.display =
                menu.style.display === "none" || menu.style.display === ""
                    ? "flex"
                    : "none";
        });
    });
</script>
