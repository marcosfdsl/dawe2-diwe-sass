            <div class="flex">
                <div class="flex items-center justify-center ancho">
                    <img
                        class="object-contain h-full w-auto"
                        src={i5.src}
                    />
                </div>
                <div class="flex items-center justify-center ancho">
                    <img
                        class="object-contain h-full w-auto"
                        src={i6.src}
                    />
                </div>
                <div class="flex items-center justify-center ancho">
                    <img
                        class="object-contain h-full w-auto"
                        src={i7.src}
                    />
                </div>
                <div class="flex items-center justify-center ancho">
                    <img
                        class="object-contain h-full w-auto"
                        src={i8.src}
                    />
                </div>
            </div>
        </article>
    </section>
</div>

<style>
    .ancho {
        width: 50vw;
        padding: 1rem;
    }

    body {
        padding: 0%;
        margin: 0%;
    }

    .article1 {
        display: flex;
        width: 400%;
        height: 35vh;
        animation: bannermove 60s linear infinite;
    }

    .article2 {
        display: flex;
        width: 400%;
        height: 35vh;
        animation: bannermove2 60s linear infinite;
    }

    @keyframes bannermove {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    @keyframes bannermove2 {
        0% {
            transform: translateX(-50%);
        }

        100% {
            transform: translateX(0);
        }
    }

    @media (min-width: 768px) {
        .article1 {
            animation: bannermove 100s linear infinite;
        }

        .article2 {
            animation: bannermove2 100s linear infinite;
        }
    }

    @media (min-width: 1024px) {
        .ancho {
            width: 25vw;
        }

        .article1 {
            width: 200%;
            animation: bannermove 140s linear infinite;
        }

        .article2 {
            width: 200%;
            animation: bannermove2 140s linear infinite;
        }
    }
</style>
